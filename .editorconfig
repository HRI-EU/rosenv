[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.md]
max_line_length = 80
trim_trailing_whitespace = false
ij_wrap_on_typing = true

[Makefile]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 72
